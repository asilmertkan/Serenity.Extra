@model _Ext.DevTools.Model.EnumExprolerPageModel
@{
    ViewData["Title"] = "Enum Exproler";
}

<div class="card m-3">
    <div class="card-header"><h4>Enum Explorer <small>Summery</small> </h4></div>
    <div class="card-body">
        <h4>Total Enums: @Model.EnumInfos.Count</h4>
    </div>
</div>

<div class="row">
    @foreach (var enumInfo in Model.EnumInfos)
    {
        <div class="col-sm-12">
            <div class="card m-3">
                <div class="card-header">
                    <h4> @enumInfo.EnumName <small>@enumInfo.EnumFullName</small></h4>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-condensed">
                        <tr>
                            <th>Name</th>
                            <th>Value</th>
                            <th>Description</th>
                        </tr>
                        @foreach (var enumValue in enumInfo.EnumValues)
                        {
                            <tr>
                                <td>@enumValue.Name</td>
                                <td>@enumValue.Value</td>
                                <td>@enumValue.Description</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    }
</div>
